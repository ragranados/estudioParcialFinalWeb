extends layout

block content
  h1= title
  p Welcome to #{title}
  .errors
  form(action="/post" method = "post" name="postForm")
    label(for="name") name
    input#name(type="text" name="name")
    label(for="autor") autor
    input#autor(type="text" name="autor")
    input#enviar(type="button", value="enviar")
    input#modificar(type="button", name="modificar",value="modificar")
    input#cancelar(type="button", name="cancelar", value="cancelar")
  table 
    thead 
      th id
      th name
      th autor
      th opciones
    tbody.posts
    script(src='/javascripts/main.js')